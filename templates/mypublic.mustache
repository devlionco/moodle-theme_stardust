require(['jquery'], function($) {
  `use strict`;

  $('#mypublicpage-profile-shortform .toggle-info').on('click', function(e){
    $(this).toggleClass('show');
    $(`
      #idnumber,
      #aim,
      #phone2,
      #skype,
      #icq,
      #birthday
    `).parent().slideToggle(function(e){
      if ($(this).is(':visible'))
      this.style = 'display:flex;'
    });
  });

  $('#page-user-profile').on('click', function(e){
    if (!$(e.target).parents('form.mform').length && !$(e.target).hasClass('fp-upload-btn') && !$(e.target).parents('div.moodle-dialogue-base').length) {
      $('.mform').fadeOut();
    };
  });

  $(document).keyup(function(e) {
    if (e.keyCode == 27) { // esc keycode
        $('.mform').fadeOut();
    }
  });

  $('.mform-close').on('click', function(e){
    $(e.target).parent().fadeOut();
  });

  $('#change_picture').on('click', function(e){
    e.stopPropagation();
    $('#mform1').fadeToggle();
  });

  $('#change_background').on('click', function(e){
    e.stopPropagation();
    $('#mform2').fadeToggle();
  });

  // adding tags on the page
  const mainBlock = document.querySelector(`#mypublicpage-profile-shortform`);
  const interests = mainBlock.querySelector('#interests');
  const tagContainer = mainBlock.querySelector('#tag-container');

  const getRandColor = () => {
    let color = Math.floor(Math.random() * Math.pow(256, 3)).toString(16);
    while(color.length < 6) {
        color = "0" + color;
    }
    return "#" + color;
  }

  function getNewTag (target) {
    let tagText = target.value;
    const tagItem = $(`<div class = "tag-item" style = "background-color: ${getRandColor()};" onClick = this.remove();>${tagText}</div>`);
    tagItem.appendTo(tagContainer);
  }

  interests.addEventListener('change', function(e){
    getNewTag(e.currentTarget);
    e.currentTarget.value = '';
  });

});
{{/js}}
