{{!
    Page footer.
}}
<footer id="page-footer" class="bg-inverse">
  <div id="stardust-footer" class="container-fluid">
    <div class="col-sm-4 col-md-3 right-logo-wrapper">
      <a class="right-logo"  href="{{output.footerlinks.mainlogo}}" style = "background-image: url({{output.get_stardust_logo}})"></a>
    </div>
    <div class="col-sm-12 col-md-6 footer-nav">
      <div class="row social-nav">
        <a href="{{output.footerlinks.youtube}}" class="nav-link social-link" title="youtube" target="_blank"></a>
        <a href="{{output.footerlinks.facebook}}" class="nav-link social-link" title="facebook" target="_blank"></a>
        <a href="{{output.footerlinks.twitter}}" class="nav-link social-link" title="twitter" target="_blank"></a>
        <a href="{{output.footerlinks.instagram}}" class="nav-link social-link" title="instagram" target="_blank"></a>
      </div>
      <div class="row bottom-nav">
        <a href="{{output.footerlinks.homepage}}" class="nav-link" title="{{#str}}home_page, theme_stardust{{/str}}">{{#str}}home_page, theme_stardust{{/str}}</a>
        <a href="{{output.footerlinks.aboutus}}" class="nav-link" title="{{#str}}about, theme_stardust{{/str}}">{{#str}}about, theme_stardust{{/str}}</a>
        <a href="{{output.footerlinks.contactus}}" class="nav-link" title="{{#str}}contact_us, theme_stardust{{/str}}">{{#str}}contact_us, theme_stardust{{/str}}</a>
        <a href="{{output.footerlinks.privacypolicy}}" class="nav-link" title="{{#str}}privacy_policy, theme_stardust{{/str}}">{{#str}}privacy_policy, theme_stardust{{/str}}</a>
        <a href="{{output.footerlinks.termsofuse}}" class="nav-link" title="{{#str}}terms_of_use, theme_stardust{{/str}}">{{#str}}terms_of_use, theme_stardust{{/str}}</a>
        <a href="{{output.footerlinks.accessibilitystatement}}" class="nav-link" title="{{#str}}accessibility_statement, theme_stardust{{/str}}">{{#str}}accessibility_statement, theme_stardust{{/str}}</a>
      </div>
      <div class="row default-items">
        <!-- other default stuff -->
        <div class="container">
            <div id="course-footer d-none">{{{ output.course_footer }}}</div>

            {{# output.page_doc_link }}
                <p class="helplink d-none">{{{ output.page_doc_link }}}</p>
            {{/ output.page_doc_link }}

            <div class = "d-none">
              {{{ output.login_info }}}
              {{{ output.home_link }}}
            </div>
            <nav class="nav navbar-nav hidden-lg-up d-none">
                {{# output.custom_menu_flat }}
                    <ul class="list-unstyled p-t-1">
                        {{> theme_boost/custom_menu_footer }}
                    </ul>
                {{/ output.custom_menu_flat }}
            </nav>
            {{{ output.standard_footer_html }}}
            {{{ output.standard_end_of_body_html }}}
        </div>
      </div>
    </div>
    <div class="col-sm-8 col-md-3 left-wrapper">
      <a href="{{output.footerlinks.listofcourses}}" class="external-link" title="{{#str}}list_of_courses, theme_stardust{{/str}}">{{#str}}list_of_courses, theme_stardust{{/str}}</a>
      <a href="{{output.footerlinks.davidsonsite}}" class="external-link" title="{{#str}}davidson_institute_wesite, theme_stardust{{/str}}">{{#str}}davidson_institute_wesite, theme_stardust{{/str}}</a>
      <div class="">
        <span class="" title="{{#str}}download_application, theme_stardust{{/str}}">{{#str}}download_application, theme_stardust{{/str}}</span>
        <a href="{{output.footerlinks.appstore}}" class="appstore apple" alt="apple appstore"></a>
        <a href="{{output.footerlinks.googleplay}}" class="appstore google" alt="google play"></a>
      </div>

    </div>
  </div>
</footer>
{{#js}}
require( ['theme_stardust/usermenu'], function(menu) {return menu.init();} );
{{/js}}
