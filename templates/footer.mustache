{{!
    Page footer.
}}
<footer id="page-footer" class="p-y-1 bg-inverse">

  <div id="stardust-footer" class="container-fluid">
    <div class="col-12 col-sm-6 col-md-3 right-logo-wrapper">
      <a class="right-logo"  href="#"></a>
    </div>
    <div class="col-12 col-md-6 footer-nav">
      <div class="row social-nav">
        <a href="#" class="nav-link social-link" title="youtube"></a>
        <a href="#" class="nav-link social-link" title="facebook"></a>
        <a href="#" class="nav-link social-link" title="twitter"></a>
        <a href="#" class="nav-link social-link" title="instagram"></a>
      </div>
      <div class="row bottom-nav">
        <a href="#" class="nav-link" title="home page">דף הבית</a>
        <a href="#" class="nav-link" title="about">אודות</a>
        <a href="#" class="nav-link" title="contact us">צור קשר</a>
        <a href="#" class="nav-link" title="privacy policy">מדיניות הפרטיות</a>
        <a href="#" class="nav-link" title="terms of use">תנאי שימוש</a>
        <a href="#" class="nav-link" title="accessibility statement">הצהרת נגישות</a>
      </div>
      <div class="row default-items d-none">
        <!-- other default stuff -->
        <div class="container">
            <div id="course-footer">{{{ output.course_footer }}}</div>

            {{# output.page_doc_link }}
                <p class="helplink">{{{ output.page_doc_link }}}</p>
            {{/ output.page_doc_link }}

            {{{ output.login_info }}}
            {{{ output.home_link }}}
            <nav class="nav navbar-nav hidden-lg-up">
                {{# output.custom_menu_flat }}
                    <ul class="list-unstyled p-t-1">
                        {{> theme_boost/custom_menu_footer }}
                    </ul>
                {{/ output.custom_menu_flat }}
            </nav>
            {{{ output.standard_footer_html }}}
            {{{ output.standard_end_of_body_html }}}
        </div>
      </div>
    </div>
    <div class="d-none d-sm-flex col-sm-6 col-md-3 left-logo-wrapper">
      <a class="left-logo" href="#"></a>
    </div>
  </div>
</footer>
