{{!
    @template theme_boost/columns2

    Admin time setting template.

    Boost 2 column layout template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * sidepreblocks - HTML for the blocks
    * hasblocks - true if there are blocks on this page
    * navdraweropen - true if the nav drawer should be open on page load
    * regionmainsettingsmenu - HTML for the region main settings menu
    * hasregionmainsettingsmenu - There is a region main settings menu on this page.

    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         },
        "bodyattributes":"",
        "sidepreblocks": "<h2>Blocks html goes here</h2>",
        "hasblocks":true,
        "navdraweropen":true,
        "regionmainsettingsmenu": "",
        "hasregionmainsettingsmenu": false
    }
}}

<div id="help-menu">
    <button
        type="button"
        id="btn-help"
        class="btn-help"
    ></button>
    <div class="menu">
        <div class="menu-header">
            <button id="btn-close" class="btn-close"></button>
        </div>
        <div class="menu-content">
            <div class="item contact_teacher_btn">
                <div class="item-icon item-icon-teacher-hat"></div>
                <div class="item-name">{{#str}} contact_teacher, theme_stardust {{/str}}</div>
            </div>
            {{#teachers}}
              <ul class = "teacher_list">
                  <li
                  class = "teacher item"
                  data-toggle = "modal"
                  data-target = "#sendMail"
                  data-teacherid = "{{id}}"
                  data-courseid = "{{courseid}}"
                  data-name = "{{firstname}} {{lastname}}"
                  data-tooltip = "tooltip"
                  data-placement = "bottom"
                  title = "{{#str}} send_mail, theme_stardust {{/str}}{{firstname}} {{lastname}}"
                  >
                      <span class="item-name">{{firstname}} {{lastname}}</span>
                  </li>
              </ul>
            {{/teachers}}

            <div
              class="item"
              data-toggle = "modal"
              data-courseid = "{{courseid}}"
              data-target = "#sendMail"
              data-mail="moodle.davidson@weizmann.ac.il"
            >
                <div class="item-icon item-icon-tech-support"></div>
                <div class="item-name">{{#str}} technical_support, theme_stardust {{/str}}</div>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="sendMail" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">{{#str}}send_mail_to_teacher, theme_stardust{{/str}} <span id = "teacherName"></span></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body" id="mailBodyBox">
        <textarea class = "w-100" rows=10 id = "mailBody"></textarea>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">{{#str}}close, theme_stardust{{/str}}</button>
        <button type="button" class="btn btn-primary" id = "sendMailToTeacher">{{#str}}send, theme_stardust{{/str}}</button>
      </div>
    </div>
  </div>
</div>

{{#js}}

require(['jquery','theme_boost/tooltip'], function($){$('[data-tooltip="tooltip"]').tooltip()});

require(['jquery', 'core/ajax', 'core/notification'], function($, ajax, notification){
    const KEYCODE_ESC = 27;
    function handleEsc(e) {
        if (e.keyCode == KEYCODE_ESC) {
            $('#help-menu .menu').fadeToggle('fast');
            $(document).off('keyup', handleEsc);
        };
    };

    $('#help-menu #btn-help').on('click', function() {
        $('#help-menu .menu').fadeToggle('fast');
        $(document).on('keyup', handleEsc);
    });
    $('#help-menu #btn-close').on('click', function() {
        $('#help-menu .menu').fadeToggle('fast');
        $(document).off('keyup', handleEsc);
    });


    $(".contact_teacher_btn").click(function(){
      $(".teacher_list").slideToggle();
    })

    // modal window
    $('#sendMail').on('show.bs.modal', function(e) {
        var target = e.relatedTarget;

        $('#teacherName').text($(target).attr("data-name"));
        $('#sendMailToTeacher').attr({
          "data-teacherid" : $(target).attr("data-teacherid") || 0,
          "data-courseid" : $(target).attr("data-courseid")
        }).html('{{#str}}send, theme_stardust{{/str}}').attr("disabled", false);

        $('#mailBodyBox').html('<textarea class = "w-100" rows=10 id = "mailBody"></textarea>');

    })
    $('#sendMailToTeacher').on('click', function(e){
        var text = $('#mailBody').val();
        var teacherid = $('#sendMailToTeacher').attr("data-teacherid");
        var courseid = $('#sendMailToTeacher').attr("data-courseid");
        var type = 0;

        $('#sendMailToTeacher').html('{{#str}}sending, theme_stardust{{/str}}').attr("disabled", true);

        ajax.call([{
            methodname: 'send_mail_to_teacher',
            args: {text: text, teacherid: teacherid, courseid: courseid},
            done: function(response) {
                if (response === '1') {
                    $('#sendMailToTeacher').html('{{#str}}sent, theme_stardust{{/str}}');
                    $('#mailBody').hide(500, function(){
                        this.remove();
                        $('#mailBodyBox').html('<h3>{{#str}}message_has_been_sent, theme_stardust{{/str}}</h3>');
                    });
                    setTimeout(function(){$('[data-dismiss="modal"]').trigger('click');}, 3000);

                } else {
                    console.log('Something wrong');
                    console.log(response);
                }
            },
            fail: notification.exception
        }]);
    });
});
{{/js}}
