<div class="remindersblock">
    <p class="notifications">{{#str}} reminders, theme_stardust {{/str}}</p>
    <button class="btn btn-icon btn-info" id="opennewreminder"><i class="icon fa fa-plus"></i> {{#str}} addnewreminder, theme_stardust {{/str}}</button>
    <div class="allreminders">
    {{#reminders}}
        <div class="reminder {{#happend}}happendreminder{{/happend}}" data-reminderid="{{id}}" style="position: relative">
            <div class="remindertext" style="width: 88%; display: inline-block; {{#happend}}font-weight: bold{{/happend}}">
            {{text}}
            </div>
            <div class="text-right" style="width: 10%; display: inline-block;">
                <span class=" btn"
                        aria-hidden="true"
                        data-toggle="dropdown"
                        >
                    <i class="icon fa fa-close"></i>
                </span>
                <div class="dropdown-menu p-2" style="top: 0">
                    <p class = "text-bold">{{#str}} delete, theme_stardust {{/str}}?</p>
                    <div class = "d-flex justify-content-center">
                      <button class = "deletereminder modal_btn modal_btn-success">{{#str}} yes, theme_stardust {{/str}}</button>
                      <button class="modal_btn">{{#str}} cancel, theme_stardust {{/str}}</button>
                    </div>
                </div>
            </div>
        </div>
    {{/reminders}}
    </div>
    <div class="addanewreminder " style="display: none; position: absolute; bottom: 0; background: #fff; width: 48%">
        <div class="form-group">
            <input class="form-control mb-1" type="text" id="newremindertext" placeholder="Text"/>
        </div>
        <div class="form-group">
            <input class="form-control mb-1" type="date" id="newreminderdate" placeholder="Date" />
        </div>
        <div class="form-group">
            <input class="form-control mb-1" type="time"  id="newremindertime" placeholder="Time"  />
        </div>
        <div class="form-group">
            <button class="btn btn-info mb-1" id="addnewreminder"><i class="icon fa fa-plus"></i> {{#str}} save, theme_stardust {{/str}}</button>
        </div>
    </div>
</div>