<p>{{#str}} reminders, theme_stardust {{/str}}</p>
<div class="allreminders test">
{{#reminders}}
    <div class="reminder pb-2 pt-2 d-flex {{#happend}}happendreminder{{/happend}} {{#istoday}}border-danger{{/istoday}}" data-reminderid="{{id}}">
        <div class="remindertext flex" style="{{#happend}}font-weight: bold{{/happend}}">
        {{text}}
        <span class = "text-info"> {{remindtime}} </span>
        </div>
        {{#removable}}
        <div class="reminder_close d-flex">
            <span
                class = "d-flex"
                aria-hidden="true"
                data-toggle="dropdown"
                >
                <i class="icon fa fa-close m-auto pl-2"></i>
            </span>
            <div class="dropdown-menu p-2">
                <p class = "text-center">{{#str}} delete, theme_stardust {{/str}}?</p>
                <div class = "d-flex justify-content-center">
                  <button class = "deletereminder btn btn-primary">{{#str}} yes, theme_stardust {{/str}}</button>
                  <button class="btn btn_cancel ml-3">{{#str}} cancel, theme_stardust {{/str}}</button>
                </div>
            </div>
        </div>
        {{/removable}}
    </div>
{{/reminders}}
<button class="btn-blue" id="opennewreminder">{{#str}} addnewreminder, theme_stardust {{/str}}</button>
</div>
<div class="addanewreminder">

    <input class="form-control mb-1" type="text" id="newremindertext" placeholder="{{#str}} dontforget, theme_stardust {{/str}}"/>
    <div class = "d-flex">
        <input class="form-control mb-1 w-50 mr-1" type="date" id="newreminderdate" placeholder="Date" />
        <input class="form-control mb-1 w-50 ml-1" type="time"  id="newremindertime" placeholder="Time"  />
    </div>
        <button type="button"  class="btn-blue mt-2 mb-2" id="addnewreminder">{{#str}} save, theme_stardust {{/str}}</button>
</div>
