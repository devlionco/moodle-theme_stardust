{{!
    @template theme_boost/columns2

    Admin time setting template.

    Boost 2 column layout template.

    Context variables required for this template:
    * sitename - The name of the site
    * output - The core renderer for the page
    * bodyattributes - attributes for the body tag as a string of html attributes
    * sidepreblocks - HTML for the blocks
    * hasblocks - true if there are blocks on this page
    * navdraweropen - true if the nav drawer should be open on page load
    * regionmainsettingsmenu - HTML for the region main settings menu
    * hasregionmainsettingsmenu - There is a region main settings menu on this page.

    Example context (json):
    {
        "sitename": "Moodle",
        "output": {
            "doctype": "<!DOCTYPE html>",
            "page_title": "Test page",
            "favicon": "favicon.ico",
            "main_content": "<h1>Headings make html validators happier</h1>"
         },
        "bodyattributes":"",
        "sidepreblocks": "<h2>Blocks html goes here</h2>",
        "hasblocks":true,
        "navdraweropen":true,
        "regionmainsettingsmenu": "",
        "hasregionmainsettingsmenu": false
    }
}}
<!-- url({{defaultbg}})  -->
<div id="my-page">
    <div id="main-wrapper" class="main-wrapper" style="background-image: url({{bgimage}});">
        <div class="help-block">
                {{#helplink}}
                    {{>theme_stardust/help-link}}
                {{/helplink}}
                {{^helplink}}
                    {{>theme_stardust/help-menu}}
                {{/helplink}}
        </div>
        <div class="main">
            <div id="main-header" class="main-header">
                <div class="block-left">
                    <h3 class="subtitle">{{#str}}page_greeting, theme_stardust{{/str}}</h3>
                    <h1 class="title">{{{ username }}}</h1>
                </div>
                <div class="block-right">
                    <a href="{{config.wwwroot}}/admin/settings.php?section=themesettingstardust#theme_stardust_mydashboardsettigs">
                      <div id="icon-camera" class="icon-camera" title = "{{#str}}change_background, theme_stardust{{/str}}"></div>
                    </a>
                </div>
            </div>
            <div id="main-content" class="main-content">
                <div class="tasks-container">
                    <div class="tasks">
                        <!-- Nav tabs -->
                        <ul class="nav nav-pills tab-links mb-3" id="pills-tab" role="tablist">
                            <li class="nav-item">
                                <a
                                        class="tab-link active"
                                        id="pills-tab-today"
                                        data-toggle="pill"
                                        href="#tab-today"
                                        role="tab"
                                        aria-controls="tab-today"
                                        aria-selected="true"
                                >
                                    {{#str}}what_doing_today, theme_stardust{{/str}}
                                </a>
                            </li>
                            <li class="nav-item">
                                <a
                                        class="tab-link"
                                        id="pills-tab-week"
                                        data-toggle="pill"
                                        href="#tab-week"
                                        role="tab"
                                        aria-controls="tab-week"
                                        aria-selected="false"
                                >
                                    {{#str}}what_doing_week, theme_stardust{{/str}}
                                </a>
                            </li>
                            <!-- <li class="nav-item">
                                <a
                                        class="tab-link"
                                        id="pills-tab-month"
                                        data-toggle="pill"
                                        href="#tab-month"
                                        role="tab"
                                        aria-controls="tab-month"
                                        aria-selected="false"
                                >
                                    {{#str}}what_doing_month, theme_stardust{{/str}}
                                </a>
                            </li> -->
                        </ul>
                        <!-- Tab panes -->
                        <div class="tab-content" id="pills-tabContent">
                            <div
                                    class="tab-pane show active"
                                    id="tab-today"
                                    role="tabpanel"
                                    aria-labelledby="pills-tab-today"
                            >
                                {{>theme_stardust/tabtoday}}
                            </div>
                            <div
                                    class="tab-pane fade"
                                    id="tab-week"
                                    role="tabpanel"
                                    aria-labelledby="pills-tab-week"
                            >
                                <div id="tabweek">{{>theme_stardust/tabweek}}</div>
                            </div>
                            <div
                                    class="tab-pane fade"
                                    id="tab-month"
                                    role="tabpanel"
                                    aria-labelledby="pills-tab-month"
                            >
                                {{>theme_stardust/tabmonth}}
                            </div>
                        </div>
                    </div>
                </div>
                <div id="messages-block" class="messages-block">
                    {{>theme_stardust/messages}}
                    <div class="achievements-block">
                        {{>theme_stardust/achievements}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{>theme_stardust/coursecards}}
</div>

{{#js}}
require(['jquery'], function($){
    $('#page #main-wrapper')
        .on('mouseover', function(event) {
            switch (event.target) {
                case this:
                case $('#page #main-header')[0]:
                case $('#page #main-content')[0]:
                case $('#page #messages-block')[0]:
                case $('#page #main-header .block-right')[0]:
                case $('#page #main-header .block-left')[0]:
                case $('#page #main-header .block-left .subtitle')[0]:
                case $('#page #main-header .block-left .title')[0]:
                case $('#page #main-header #icon-camera')[0]:
                    $('#page #icon-camera').show();
                    break;
                default:
                    $('#page #icon-camera').hide();
            }
        })
        .on('mouseleave', function() {
            $('#page #icon-camera').hide();
        });
});
{{/js}}
